{
  "name": "new-app-lite-ts",
  "version": "1.0.0",
  "description": "XpresserJs Typescript Lite App (No Views) Boilerplate ",
  "main": "app.ts",
  "repository": "https://github.com/xpresserjs/new-app-lite-ts",
  "author": "xpresserjs",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "npm run build && node build/app.js",
    "build": "npx xjs @stack tsc",
    "ts-watch": "npx tsc --watch",
    "ts-dev": "npx ts-node-dev --respawn app.ts",
    "js-dev": "npx nodemon build/app.js"
  },
  "dependencies": {
    "@xpresser/params-loader": "^0.1.3",
    "xpresser": "^0.25.4"
  },
  "devDependencies": {
    "@types/node": "^16.11.1",
    "nodemon": "^2.0.14",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4",
    "xjs-cli": "^1.0.2"
  }
}
